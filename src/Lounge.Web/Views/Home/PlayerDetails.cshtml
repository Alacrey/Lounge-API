@using Lounge.Web.Models.ViewModels
@using Lounge.Web.Settings
@using Lounge.Web.Utils
@inject ILoungeSettingsService LoungeSettingsService
@model PlayerDetailsViewModel

@{
    ViewData["Title"] = Model.Name;
}

<div class="navbar navbar-expand-sm navbar-dark bg-dark rounded py-0" style="margin-bottom: 14px;">
    <div class="container-fluid">
        <span class="navbar-brand">Seasons</span>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#seasonSelector">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-md-center" id="seasonSelector">
            <ul class="navbar-nav">
                @foreach (var season in Model.ValidSeasons)
                {
                    <li class="nav-item">
                        <a class="nav-link @(season == Model.Season ? "active" : "")" asp-action="PlayerDetails" asp-route-id="@Model.PlayerId"  asp-route-season="@season">Season @season</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>

<h1>@Model.Name - @Html.DisplayFor(model => model.Rank) @(Model.IsHidden ? "(Hidden)" : string.Empty)</h1>
<hr />

<div>
    <dl class="row">
        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-6">
            <dt>@Html.DisplayNameFor(model => model.OverallRank)</dt>
            <dd>@Html.DisplayFor(model => model.OverallRank)</dd>
        </div>
        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-6">
            <dt>@Html.DisplayNameFor(model => model.Mmr)</dt>
            <dd class="rank-@Model.RankData.Division">@Html.DisplayFor(model => model.Mmr)</dd>
        </div>
        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-6">
            <dt>@Html.DisplayNameFor(model => model.MaxMmr)</dt>
            <dd class="rank-@LoungeSettingsService.GetRank(Model.MaxMmr, Model.Season)!.Division">@Html.DisplayFor(model => model.MaxMmr)</dd>
        </div>
        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-6">
            <dt>@Html.DisplayNameFor(model => model.WinRate)</dt>
            <dd>@Html.DisplayFor(model => model.WinRate)</dd>
        </div>
        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-6">
            <dt>@Html.DisplayNameFor(model => model.WinLossLastTen)</dt>
            <dd>@Html.DisplayFor(model => model.WinLossLastTen)</dd>
        </div>
        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-6">
            <dt>@Html.DisplayNameFor(model => model.GainLossLastTen)</dt>
            <dd>@Html.DisplayFor(model => model.GainLossLastTen)</dd>
        </div>
        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-6">
            <dt>@Html.DisplayNameFor(model => model.EventsPlayed)</dt>
            <dd>@Html.DisplayFor(model => model.EventsPlayed)</dd>
        </div>
        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-6">
            <dt>@Html.DisplayNameFor(model => model.LargestGain)</dt>
            <dd>
                @if(Model.LargestGainTableId != null)
                {
                    <a asp-action="TableDetails" asp-route-id="@Model.LargestGainTableId">@Html.DisplayFor(model => model.LargestGain)</a>
                }
                else
                {
                    @Html.DisplayFor(model => model.LargestGain)
                }
            </dd>
        </div>
        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-6">
            <dt>@Html.DisplayNameFor(model => model.LargestLoss)</dt>
            <dd>
                @if(Model.LargestLossTableId != null)
                {
                    <a asp-action="TableDetails" asp-route-id="@Model.LargestLossTableId">@Html.DisplayFor(model => model.LargestLoss)</a>
                }
                else
                {
                    @Html.DisplayFor(model => model.LargestLoss)
                }
            </dd>
        </div>
        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-6">
            <dt>@Html.DisplayNameFor(model => model.AverageScore)</dt>
            <dd>@Html.DisplayFor(model => model.AverageScore)</dd>
        </div>
        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-6">
            <dt>@Html.DisplayNameFor(model => model.AverageLastTen)</dt>
            <dd>@Html.DisplayFor(model => model.AverageLastTen)</dd>
        </div>
        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-6">
            <dt>@Html.DisplayNameFor(model => model.PartnerAverage)</dt>
            <dd>@Html.DisplayFor(model => model.PartnerAverage)</dd>
        </div>
        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-6">
            <dt>@Html.DisplayNameFor(model => model.ForumLink)</dt>
            <dd><a href="@Model.ForumLink">Link</a></dd>
        </div>
        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-6">
            <dt>@Html.DisplayNameFor(model => model.CountryName)</dt>
            <dd>@Html.DisplayFor(model => model.CountryName)</dd>
        </div>
    </dl>
    <br />
    @if (Model.MmrChanges.Count > 0)
    {
        <div class="table-responsive">
            <table class="table table-striped table-dark">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.MmrChanges[0].Reason)</th>
                        <th>@Html.DisplayNameFor(model => model.MmrChanges[0].Time)</th>
                        <th>@Html.DisplayNameFor(model => model.MmrChanges[0].MmrDelta)</th>
                        <th>@Html.DisplayNameFor(model => model.MmrChanges[0].NewMmr)</th>
                    </tr>
                </thead>
                @foreach (var change in Model.MmrChanges)
                {
                    <tr>
                        <td>
                            @if (change.Reason is PlayerDetailsViewModel.MmrChangeReason.Table)
                            {
                                <a asp-action="TableDetails" asp-route-id="@change.ChangeId">@TableUtils.TierDisplayName(change.Tier) @TableUtils.FormatDisplay(change.NumTeams!.Value) (ID: @change.ChangeId)</a>
                            }
                            else if (change.Reason is PlayerDetailsViewModel.MmrChangeReason.TableDelete)
                            {
                                <a asp-action="TableDetails" asp-route-id="@change.ChangeId">@Html.DisplayFor(modelItem => change.Reason) (ID: @change.ChangeId)</a>
                            }
                            else
                            {
                                @Html.DisplayFor(modelItem => change.Reason)
                            }
                        </td>
                        <td>
                            <span class="utc-to-local" data-time="@change.Time.ToString("o", System.Globalization.CultureInfo.InvariantCulture)">
                                @Html.DisplayFor(modelItem => change.Time)
                            </span>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => change.MmrDelta)
                        </td>
                        <td class="rank-@LoungeSettingsService.GetRank(change.NewMmr, Model.Season)!.Division">
                            @Html.DisplayFor(modelItem => change.NewMmr)
                        </td>
                    </tr>
                }
            </table>
        </div>
    }
</>
